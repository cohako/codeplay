<h1> Curso </h1>
<ul>
  <li> <%= @course.name %> </li>
  <li> <%= @course.description %> </li>
  <li> <%= @course.code %> </li>
  <li> <%= number_to_currency_brl @course.price%> </li>
  <li> <%= @course.date_to_metric%> </li>
</ul>

<p> <%= link_to 'Editar', edit_course_path(@course)%> </p>
<p> <%= link_to 'Apagar', course_path(@course), method: :delete %>
<p> <%= link_to "Voltar", courses_path%> </p>