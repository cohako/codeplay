<%= form_with url: url, model: lesson do |f| %>
  <%= 'Nome do curso: '+@course.name %>
  <%= f.label :name, 'Nome'%>
  <%= f.text_field :name %>
  <% lesson.errors.full_messages_for(:name).each do |message| %>
    <%= message %>
  <% end %>
  <%= f.label :content, 'Descrição'%>
  <%= f.text_area :content %>
  <%= f.submit%>
<% end %>